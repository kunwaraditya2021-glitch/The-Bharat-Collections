# QIKINK_API_BASE_URL=https://api.qikink.com/api/v1
# QIKINK_AUTH_URL=https://api.qikink.com/oauth/token

# =====================================================
# RAZORPAY CONFIGURATION
# =====================================================
# Get these from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_here

# For production, use live keys:
# RAZORPAY_KEY_ID=rzp_live_your_key_id_here

# =====================================================
# JWT AUTHENTICATION
# =====================================================
# Generate a strong secret key (use: python -c "import secrets; print(secrets.token_hex(32))")
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =====================================================
# FLASK CONFIGURATION
# =====================================================
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_SECRET_KEY=your-flask-secret-key-here

# For production:
# FLASK_ENV=production
# FLASK_DEBUG=False

# =====================================================
# SERVER CONFIGURATION
# =====================================================
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# =====================================================
# CORS CONFIGURATION
# =====================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:5000

# =====================================================
# BACKGROUND JOBS CONFIGURATION
# =====================================================
# Tracking update interval (in hours)
TRACKING_UPDATE_INTERVAL=3

# Failed order retry interval (in minutes)
RETRY_INTERVAL=30

# =====================================================
# LOGGING CONFIGURATION
# =====================================================
LOG_LEVEL=INFO
LOG_FILE=logs/mediator.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# =====================================================
# EMAIL CONFIGURATION (OPTIONAL - FOR ALERTS)
# =====================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ADMIN_EMAIL=admin@bharatcollections.com

# =====================================================
# RATE LIMITING
# =====================================================
RATE_LIMIT_PUBLIC=100/minute
RATE_LIMIT_ADMIN=1000/minute
RATE_LIMIT_WEBHOOK=500/minute
